// "add"
void file_add(LocalFile* f)
	if f.in_db()

		// suddenly appearing?!?
		if f.pure_remote()
			if FileExists(f.path)
				f.unset(NONLOCAL)
				print("NON-NONLOCAL " + rel_path(f.path))
				return
		
		// lost?
		if !FileExists(f.path)
			if !f.pure_remote()
				f.set(NONLOCAL)
				print("LOST  " + rel_path(f.path))
			return
		
		// time
		File* ff = FileOpen(f.path)
		int mtime = ff.getMDate().time
		if mtime == f.mtime
			if conf.verbose
				print("=  " + rel_path(f.path))
		else
			// changed?
			string hash = FileHash(f.path, "md5")
			if hash == f.hash
				print("TOUCHED  " + rel_path(f.path))
				// ok
				f.mtime = mtime
			else
				print("EDITED  " + rel_path(f.path))
				f.set(CHANGED_FILE)
				f.hash = hash
				f.mtime = mtime
				f.size = ff.getSize()
				if conf.verbose or conf.show_meta
					f.show_info("      ")
		delete ff
	else
		// new file
		
		string hash = FileHash(f.path, "md5")
		LocalFile* ff = db.find_by_hash(hash)
		if ff
			// hash already in db?
			if FileExists(ff.path)
				print("DUPLICATE  " + rel_path(f.path) + " <-> " + rel_path(ff.path))
				return
			print("MOVED  " + rel_path(ff.path) + " > " + rel_path(f.path))
			ff.path = f.path
			db.dirty = true
		else
			// new
			print("ADD  " + rel_path(f.path))
			f.name = f.path.basename()
			string ext = f.path.extension()
			if ext.num > 0
				f.name = f.name.head(f.name.num - ext.num - 1)
			//print(ext)
			//print(l.name)
			f.hash = hash
			File* fff = FileOpen(f.path)
			f.mtime = fff.getMDate().time
			f.size = fff.getSize()
			delete fff
			if conf.show_meta or conf.verbose
				f.show_info("      ")
			db.files.add(*f)










