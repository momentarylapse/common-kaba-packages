void action_pull(string dir)
	set_working_dir(dir)
	
	LocalFile*[] files
	LocalFile* ff = db.find_by_path(dir)
	if ff
		files.add(ff)
	else
		files = db.get_in_dir(dir)
	
	LocalFile*[] need_meta
	for f in files
		if f.pure_remote() or f.is(CHANGED_FILE)
			remote_download(f)
		if f.is(CHANGED_META)
			need_meta.add(f)
			
	remote_download_meta(need_meta)


void action_push(string dir)
	set_working_dir(dir)
	
	LocalFile*[] files
	LocalFile* ff = db.find_by_path(dir)
	if ff
		files.add(ff)
	else
		files = db.get_in_dir(dir)
	for f in files
		if f.pure_local() //or f.is(CHANGED_FILE)
			remote_upload(f)
		if f.is(CHANGED_META)
			remote_upload_meta(f)

