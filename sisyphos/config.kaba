func _is_canonical_dir(dir: string) -> bool
	if len(dir) == 0
		return false
	return dir[len(dir) - 1] == '/'

func _dir_canonical(dir: string) -> string
	if _is_canonical_dir(dir)
		return dir
	return dir + "/"

func _canonify(path: string) -> string
	var xx = path.explode("/")
	for i in 0:len(xx)
		if xx[i] == "."
			xx.remove(i)
			i -= 1
		else if xx[i] == ".." and i > 1
			xx.remove(i-1)
			xx.remove(i-1)
			i -= 2
	return xx.join("/")

