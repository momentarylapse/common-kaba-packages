struct ConfigDirSync
	# from ConfigDir
	var dir: Path
	var structure: string
	
	var filter: string
	var options: string
	


	func get_structure() -> string[]
		var oo = options.explode(";")
		for o in oo
			if o[:10] == "structure="
				return o[10:].explode("/")
	func quality() -> string
		if options.find("quality=medium", 0) >= 0
			return MEDIUM
		return PERFECT

	func guess_dir(parts: string[]) -> Path
		var structure = get_structure()
		var dir: Path
		for s in structure
			var v = get_tag(parts, s)
			if len(v) > 0
				dir = dir | v
		return dir

struct ConfigDir
	var dir: Path
	var syncs: ConfigDirSync[]
	var structure: string
	
	func mut add_sync(filter: string, options: string)
		var s: ConfigDirSync
		s.dir = dir
		s.filter = filter
		s.options = options
		syncs.add(s)


struct Config
		
	var dirs: ConfigDir[]
	var ignore: string[]
	var server = "michi.is-a-geek.org"
	
	# runtime
	var verbosity = 1
	var show_meta = false
	var show_meta_small = false
	var recursive = false
	var filter_pure_local = false
	var filter_pure_remote = false
	var show_pure_local = false
	var show_perfectly_fine = true
	var show_not_in_db = true
	var drop_deleted = false
	var pull_tags = false
	var pull_tags_only_add = false
	var dry_run = false
	var default_quality = "perfect"
	var default_structure = "{name}.{ext}"

	func mut load()
		var f = new TextLinesFormatter(fs.open(hui.app_directory | "sisyphos/config", "rt"))
		var n, m: int
		f >> n
		for i in 0:n
			var t: string
			var e: ConfigDir
			f >> t
			e.dir = Path(t)
			f >> e.structure
			f >> m
			for j in 0:m
				var s: ConfigDirSync
				s.dir = e.dir
				s.structure = e.structure
				f >> s.filter
				f >> s.options
				e.syncs.add(s)
			dirs.add(e)
		f >> n
		for i in 0:n
			var ig: string
			f >> ig
			ignore.add(ig)
	func save()
		make_all_dirs(hui.app_directory | "sisyphos")
		var f = new TextLinesFormatter(fs.open(hui.app_directory | "sisyphos/config", "wt"))
		f << len(dirs)
		for e in dirs
			f << str(e.dir)
			f << e.structure
			f << len(e.syncs)
			for s in e.syncs
				f << s.filter
				f << s.options
		f << len(ignore)
		for i in ignore
			f << i
		f << server

	func show()
		for e in conf.dirs
			print(e.dir)
			print("structure: {{e.structure}}")
			for s in e.syncs
				print("  filter: {{s.filter}}")
				print("    options: {{s.options}}")

	func mut add_filter(dir: Path, filter: string, _options: string)
		var options = _options
		if default_quality == MEDIUM and options == ""
			options = "quality=medium"
		for e in dirs
			if e.dir == dir
				e.add_sync(filter, options)
				return
		var e: ConfigDir
		e.dir = dir
		e.add_sync(filter, options)
		dirs.add(e)
	
	func selfref get_cfg(dir: Path) -> ConfigDir*
		for e in dirs
			if e.dir == dir
				return &e
		#raise(new Exception("not found"))
		return nil

	func dir_is_in_db(_dir: Path) -> bool
		return get_cfg(_dir)

	func mut rm_filter(dir: Path, filter: string)
		for e in dirs
			if e.dir == dir
				for i=>s in e.syncs
					if s.filter == filter
						e.syncs.remove(i)
						return
		print("NOT FOUND...")

	func mut rm_dir(dir: Path)
		for i=>e in dirs
			if e.dir == dir
				dirs.remove(i)
				return
		print("NOT FOUND...")

var conf: Config
